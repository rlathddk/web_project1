{{>header}}
<div class="w-100 border rounded">
    <div id="inputClass" class="sticky-top p-3">
        <div class="border-bottom mb-3 pb-4">
            <h1 class="h2">강의 등록하기</h1>
            <div class="d-flex">
                <input type="text" class="classname form-control w-50 me-2" placeholder="강의명"/>
                <select class="classtype form-select w-25 me-2">
                    <option value="전공필수">전공필수</option>
                    <option value="전공선택">전공선택</option>
                    <option value="교양필수">교양필수</option>
                    <option value="교양선택">교양선택</option>
                </select>
                <button class="btn btn-success" onclick="checkClassName()" type="button">등록</button>
            </div>
        </div>
        <div class="pt-3 px-3">
            <table class="table table-striped-columns table-hover border-top align-middle">
                <thead>
                <tr class="text-center">
                    <th scope="col">번호</th>
                    <th scope="col" colspan="5">강의명</th>
                    <th scope="col" colspan="4">강의타입</th>
                    <th scope="col">비고</th>
                </tr>
                </thead>
                <tbody class="classInfo">

                </tbody>
            </table>
        </div>
        <div class="d-flex justify-content-center pt-3 p-3 border-bottom pagination">
            페이지네이션
        </div>
    </div>
</div>
<script src="/js/class.js"></script>
{{>footer}}